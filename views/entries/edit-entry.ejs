<%- include("../partials/header.ejs") %>

<h2 class="centered">Edit Entry</h2>

<form method="POST" action="/entries/<%= entry.id %>?_method=PUT">

  <h1>☀️</h1>

<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label"><h4>I am grateful for:</h4></label>
  <textarea class="form-control" type="text" id="content1" rows="5" name="content1" required><%= entry.content.content1 %></textarea>
</div>

<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label"><h4>What would make today great?</h4></label>
  <textarea class="form-control" type="text" id="content2" rows="3" name="content2" required><%= entry.content.content2 %></textarea>
</div>

<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label"><h4>Positive Affirmation</h4></label>
  <textarea class="form-control" type="text" id="content3" rows="3" name="content3" required><%= entry.content.content3 %></textarea>
</div>

<h1>☾</h1>

  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label"><h4>Good things that happened today:</h4></label>
    <textarea class="form-control" type="text" id="content4" rows="3" name="content4" required><%= entry.content.content4 %></textarea>
  </div>

  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label"><h4>What I learned today:</h4></label>
    <textarea class="form-control" type="text" id="content5" rows="3" name="content5" required><%= entry.content.content5 %></textarea>
  </div>

  

<div class="centered">
  <button type="submit">Save Changes</button>
</form>
</br>
