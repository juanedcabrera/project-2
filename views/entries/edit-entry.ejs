<%- include("../partials/header.ejs") %>

<h1>Edit Entry</h1>


<form method="POST" action="/entries/<%= entry.id %>/edit?_method=PUT">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= entry.title %>">
  </div>
  <div>
    <label for="content">Content</label>
    <textarea id="content" name="content"><%= entry.content %></textarea>
  </div>
  <button type="submit">Save Changes</button>
</form>

<form method="POST" action="/entries/<%= entry.id %>?_method=DELETE">
  <button type="submit">Delete</button>
  <input type="hidden" name="_method" value="DELETE">
</form>

