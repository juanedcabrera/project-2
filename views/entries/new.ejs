<%- include("../partials/header.ejs") %>

<h2>Entries - New</h2>

<p><%= quotes.quote %></p>
<p><%= quotes.author %></p>

<form method="POST" action="/entries">
    <label for="title">Title:</label>
    <input type="text" name="title" required>
  
    <label for="content">Content:</label>
    <input type="text" name="content1" required>

    <label for="content">Content2:</label>
    <input type="text" name="content2" required>

    <label for="content">Content3:</label>
    <input type="text" name="content3" required>
  
    <label>Tags:</label>
    <div>
      <input type="checkbox" id="tag-happy" name="tags" value="happy">
      <label for="tag-happy">Happy</label>
    </div>
    <div>
      <input type="checkbox" id="tag-sad" name="tags" value="sad">
      <label for="tag-sad">Sad</label>
    </div>
    <div>
      <input type="checkbox" id="tag-confident" name="tags" value="confident">
      <label for="tag-confident">Confident</label>
    </div>
  
    <button type="submit">Save Entry</button>
  </form>

<%- include('../partials/footer.ejs') %>