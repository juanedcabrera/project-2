
<h2 class="centered">Entry on <%= entry.createdAt.toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric', hour12: true }) %></h2>
<div class="centered">
  <!-- Disable the Edit Entry link -->
  <a href="/entries/<%= entry.id %>/edit" class="disabled" aria-disabled="true">Edit Entry</a>
</div>


    <!-- This is to grab selectedTemplate for the POST route -->
    <input type="hidden" name="selectedTemplate" value="<%= selectedTemplate %>">

  <div class="centered">
  <h1>📝</h1>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">What did I accomplish?</label>
    <textarea class="form-control" type="text" id="content1" rows="3" name="content1" disabled required maxlength="2100" disabled><%= entry.content.content1 %></textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">What is the impact that this item had for me and/or my team?</label>
    <textarea class="form-control" type="text" id="content2" rows="3" name="content2" disabled required maxlength="2100" disabled><%= entry.content.content2 %></textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">What is the impact that this item had on the organization?</label>
    <textarea class="form-control" type="text" id="content3" rows="3" name="content3" disabled required maxlength="2100" disabled><%= entry.content.content3 %></textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Who helped you in achieving this accomplishment?</label>
    <textarea class="form-control" type="text" id="content4" rows="3" name="content4" disabled required maxlength="2100" disabled><%= entry.content.content4 %></textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">What did you learn?</label>
    <textarea class="form-control" type="text" id="content5" rows="3" name="content5" disabled required maxlength="2100" disabled><%= entry.content.content5 %></textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">How will you take this further?</label>
    <textarea class="form-control" type="text" id="content6" rows="3" name="content6" disabled required maxlength="2100" disabled><%= entry.content.content6 %></textarea>
  </div>


  <h4>
    <% if (entry.tags.length) { %>
        <p>Tags:
          <% entry.tags.forEach(function(tag) { %>
            <%= tag.name %>
          <% }); %>
        </p>
      <% } %>
    </h4>
    



