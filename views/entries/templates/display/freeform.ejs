<h2 class="centered">Entry on <%= entry.createdAt.toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric', hour12: true }) %></h2>
<div class="centered">
  <!-- Disable the Edit Entry link -->
  <a href="/entries/<%= entry.id %>/edit" class="disabled" aria-disabled="true">Edit Entry</a>
</div>

  <!-- This is to grab selectedTemplate for the POST route -->
  <input type="hidden" name="selectedTemplate" value="<%= selectedTemplate %>">

  <div class="centered">
  <h1>📝</h1>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">What happened today?</label>
    <textarea class="form-control" type="text" id="content1" rows="3" name="content1" disabled required maxlength="2100"><%= entry.content.content1 %></textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Any thoughts you want to record?</label>
    <textarea class="form-control" type="text" id="content2" rows="3" name="content2" disabled required maxlength="2100"><%= entry.content.content2 %></textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">How are you feeling?</label>
    <textarea class="form-control" type="text" id="content3" rows="3" name="content3" disabled required maxlength="2100"><%= entry.content.content3 %></textarea>
  </div>



  <h4>
    <% if (entry.tags.length) { %>
        <p>Tags:
          <% entry.tags.forEach(function(tag) { %>
            <%= tag.name %>
          <% }); %>
        </p>
      <% } %>
    </h4>
    
