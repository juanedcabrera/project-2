    <script>

function loadDarkMode() {
  const isDarkMode = localStorage.getItem('dark-mode') === 'true';
  
  const body = document.querySelector('body');
  body.classList.toggle('dark-mode', isDarkMode);

  const calendarHeaders = document.querySelectorAll('.calendar-header');
  calendarHeaders.forEach(header => header.classList.toggle('dark-mode', isDarkMode));

  const calendarMonths = document.querySelectorAll('.calendar-month');
  calendarMonths.forEach(month => month.classList.toggle('dark-mode', isDarkMode));

  const calendarWeekdays = document.querySelectorAll('.calendar-weekdays');
  calendarWeekdays.forEach(day => day.classList.toggle('dark-mode', isDarkMode));

  const calendarDates = document.querySelectorAll('.calendar-date');
  calendarDates.forEach(date => date.classList.toggle('dark-mode', isDarkMode));

  const weekends = document.querySelectorAll('.weekend');
  weekends.forEach(weekend => weekend.classList.toggle('dark-mode', isDarkMode));
}


    </script>
